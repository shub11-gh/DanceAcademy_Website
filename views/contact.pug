extends base.pug
    
block style 
    style   
        include ../static/style.css
        include ../static/contact.css
        
block content 
    div.container
        h1  Contact Us
        form(action='/contact',method='post',class="myForm")
            input(type="text",name="name",class="myInput",placeholder="Enter your name")
            input(type="number",name="age",class="myInput",placeholder="Enter your age")
            input(type="tel",name="phone",class="myInput",placeholder="Enter your phone number")
            input(type="email",name="email",class="myInput",placeholder="Enter your email")
            input(type="text",name="desc",class="myInput",placeholder="Enter your concern")
            button.btn 
                | Submit
    